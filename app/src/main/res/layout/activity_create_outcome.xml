<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateOutcomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/bg_outcome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_outcome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/jost_medium"

            android:textSize="25sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="18sp"
        android:fontFamily="@font/jost_medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"/>

    <TextView
        android:id="@+id/tv_date_picker"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="30dp"
        android:text="@string/enter_the_date"
        android:textColor="@color/black"
        android:fontFamily="@font/jost_regular"
        android:padding="15dp"
        android:editable="false"
        android:focusable="true"
        android:background="@drawable/input_pick_date_outcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"/>

    <ImageView
        android:id="@+id/iv_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/date"
        android:layout_marginTop="11dp"
        android:contentDescription="@string/date"
        app:layout_constraintStart_toEndOf="@id/tv_date_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date_picker"/>

    <TextView
        android:id="@+id/tv_spinner_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_kind_of_item"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_medium"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_picker"/>

    <Spinner
        android:id="@+id/dropdown_menu"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/input_pick_date_outcome"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_spinner_item"/>


    <TextView
        android:id="@+id/tv_much"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_medium"
        android:text="@string/how_many"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_menu" />


    <EditText
        android:id="@+id/edtQuantity"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="@drawable/input_pick_date_outcome"
        android:ems="10"
        android:inputType="number"
        android:padding="16dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_much"
        tools:alpha="100"
        tools:ignore="LabelFor" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_medium"
        android:text="@string/how_much_for_the_price"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtQuantity" />


    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="@drawable/input_pick_date_outcome"
        android:ems="10"
        android:inputType="number"
        android:padding="16dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        tools:alpha="100"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jost_medium"
        android:text="@string/total"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPrice" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_medium"
        android:text="@string/rp_30_000"
        android:textSize="20sp"
        android:layout_marginStart="120dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/tv_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_total"/>


    <Button
        android:id="@+id/btn_save_outcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_save_outcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/save"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_total"/>










</androidx.constraintlayout.widget.ConstraintLayout>